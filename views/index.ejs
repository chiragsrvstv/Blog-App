<% include partials/header.ejs %>

<div class="ui main text container">
  <h1> INDEX PAGE </h1>
<div class="ui main text container segment">


<div class="ui grid">
  <div class="ui items">
    <% blogs.forEach(function(blog){ %>
    <div class="item three wide column">
      <div class="image">
        <img src = "<%=blog.image%>">
      </div>
    <div class="content">
      <a class="header"> <%= blog.title %> </a>
      <div class="meta">
        <span> <%= blog.created.toDateString() %> </span>
    </div>
      <div class="description">
        <p> <%- blog.body.substring(0, 50) %> ... </p>
      </div>
      <div class="extra">
        <a href="/blogs/<%=blog.id%>"> Read More </a>
      </div>
    </div>
</div>
<% }) %>
</div>


</div>
</div>
</div>

<% include partials/footer.ejs %>