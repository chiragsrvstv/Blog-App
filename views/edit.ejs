<% include partials/header.ejs %>

<div class="ui main text container segment">

  <div class="ui huge header"> Edit <%= blog.title %> </div>

  <form class="ui form" action="/blogs/<%=blog._id%>?_method=PUT" method="POST">
    <div class="field">
      <label> Title </label>
      <input required type="text" name="blog[title]" value="<%= blog.title %>" placeholder="Title">
    </div>
    <div class="field">
      <label> Image URL </label>
      <input type="text" name="blog[image]" value="<%= blog.image %>" placeholder="Image URL">
    </div>
    <div class="field">
      <label> Blog Content </label>
      <textarea required name="blog[body]" rows="8" cols="80"> <%= blog.body %> </textarea>
    </div>
    <input class="ui purple button" type="submit">
  </form>

</div>

<% include partials/footer.ejs %>